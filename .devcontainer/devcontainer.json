{
  "name": "NextOrders Space",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "workspaceFolder": "/workspaces/next-orders/${localWorkspaceFolderBasename}",
  "postCreateCommand": "npm i -g pnpm@latest turbo@latest && pnpm i",
  "customizations": {
    "vscode": {
      "extensions": [
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "Vue.volar",
        "ms-azuretools.vscode-docker",
        "Codeium.codeium",
        "Vercel.turbo-vsc",
        "Prisma.prisma"
      ]
    }
  }
}
