{
  "version": "0.7.0",
  "title": "@next-orders/email",
  "description": "Easy way to send an email through a prepared service.",
  "routes": [
    {
      "path": "/send",
      "method": "POST",
      "body": {
        "to": {
          "type": "string",
          "required": true,
          "example": "my@email.com"
        },
        "template": {
          "type": "string",
          "required": true
        },
        "data": {
          "type": "object",
          "required": true
        }
      },
      "headers": {
        "Authorization": {
          "type": "string",
          "required": true,
          "example": "Bearer <token>"
        }
      }
    }
  ]
}
